@model IEnumerable<Proyecto_CineClub.Models.Pelicula>

@Html.Partial("_SedeFechaForm")

<div class="container">
    <div class="row">
        @if (Model.Any())
        {
            foreach (var pelicula in Model)
            {
                <div class="col-2 text-center mt-4 mb-4 custom-col">
                    <!-- Clase personalizada -->
                    <img src="@Url.Content(pelicula.RutaImagen)" alt="@pelicula.Titulo" class="img-fluid">
                    <div>@pelicula.Titulo</div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>No se encontraron películas que coincidan con la búsqueda.</p>
            </div>
        }
    </div>
</div>

<style>
    .custom-col {
        flex: 0 0 20%; 
        max-width: 20%; 
    }
</style>
