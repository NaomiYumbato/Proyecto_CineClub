@model Proyecto_CineClub.Models.Persona

@{
    ViewBag.Title = "Registro";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col col-md-8">
                <div class="screen">
                    <div class="screen__content text-center">
                        @if (!string.IsNullOrEmpty(ViewBag.mensaje))
                        {
                            <div class="alert alert-info">@ViewBag.mensaje</div>
                        }
                        <h4>Crear Usuario</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <!-- Mensaje de éxito -->
                        @if (TempData["mensaje"] != null)
                        {
                            <div class="alert alert-success mt-3">
                                @TempData["mensaje"]
                            </div>
                        }

                        <!-- Fila para Primer y Segundo Nombre -->
                        <div class="form-group row mb-3">
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.PrimerNombre, new { htmlAttributes = new { @class = "login__input", placeholder = "Primer Nombre" } })
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.SegundoNombre, new { htmlAttributes = new { @class = "login__input", placeholder = "Segundo Nombre" } })
                            </div>
                        </div>
                        <div class="form-group row mb-3">
                            <div class="col-md-12">
                                @Html.ValidationMessageFor(model => model.PrimerNombre, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Fila para Primer y Segundo Apellido -->
                        <div class="form-group row mb-3">
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.PrimerApellido, new { htmlAttributes = new { @class = "login__input", placeholder = "Primer Apellido" } })
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.SegundoApellido, new { htmlAttributes = new { @class = "login__input", placeholder = "Segundo Apellido" } })
                            </div>
                        </div>
                        <div class="form-group row mb-3">
                            <div class="col-md-12">
                                @Html.ValidationMessageFor(model => model.PrimerApellido, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Fila para DNI y Celular -->
                        <div class="form-group row mb-3">
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Dni, new { htmlAttributes = new { @class = "login__input", placeholder = "DNI" } })
                            </div>
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Celular, new { htmlAttributes = new { @class = "login__input", placeholder = "Celular" } })
                            </div>
                        </div>
                        <div class="form-group row mb-3">
                            <div class="col-md-6">
                                @Html.ValidationMessageFor(model => model.Dni, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                @Html.ValidationMessageFor(model => model.Celular, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Fila para Fecha de Nacimiento -->
                        <div class="form-group row mb-3">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.FechaNacimiento, htmlAttributes: new { @class = "control-label", style = "font-weight: bold; color: gray;" })
                                <input class="login__input" type="date" id="FechaNacimiento" name="FechaNacimiento"
                                       value="@((Model.FechaNacimiento == DateTime.MinValue) ? "0000-00-00" : Model.FechaNacimiento.ToString("yyyy-MM-dd"))"
                                       min="1900-01-01"
                                       max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            </div>
                        </div>
                        <div class="form-group row mb-3">
                            <div class="col-md-12">
                                @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Fila para Usuario, Correo y Contraseña -->
                        <div class="form-group row mb-3">
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "login__input", placeholder = "Usuario" } })
                            </div>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "login__input", placeholder = "Correo" } })
                            </div>
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.Clave, new { htmlAttributes = new { @class = "login__input", placeholder = "Contraseña" } })
                            </div>
                        </div>
                        <div class="form-group row mb-3">
                            <div class="col-md-4">
                                @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4">
                                @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-4">
                                @Html.ValidationMessageFor(model => model.Clave, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <!-- Botón de registro -->
                        <div class="form-group">
                            <button type="submit" class="button login__submit">
                                <span class="button__text">Registrar</span>
                                <i class="button__icon fas fa-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
