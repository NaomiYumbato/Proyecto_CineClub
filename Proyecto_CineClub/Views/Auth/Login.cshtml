@model Proyecto_CineClub.Models.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col col-md-4">
                <div class="screen">
                    <div class="screen__content text-center">
                        <!-- Mensaje de error general -->
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                        @Html.ValidationMessageFor(model => model.clave, "", new { @class = "text-danger" })

                        <!-- Mensaje de éxito -->
                        @if (TempData["mensaje"] != null)
                        {
                            <div class="alert alert-success mt-3">
                                @TempData["mensaje"]
                            </div>
                        }

                        <div class="login__field">
                            <i class="login__icon fas fa-user"></i>
                            @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "login__input", placeholder = "Email" } })

                        </div>

                        <div class="login__field">
                            <i class="login__icon fas fa-lock"></i>
                            @Html.EditorFor(model => model.clave, new { htmlAttributes = new { @class = "login__input", placeholder = "Contraseña", type = "password" } })

                        </div>

                        <button type="submit" class="button login__submit">
                            <span class="button__text">Ingresar</span>
                            <i class="button__icon fas fa-chevron-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
